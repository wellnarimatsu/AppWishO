<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="14dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/azul_wisho"

    >


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imagem_card"
        android:layout_width="150dp"
        android:layout_height="0dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/nome_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"

        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/imagem_card"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="MacBook Air M1" />

    <TextView
        android:id="@+id/descricao_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"

        android:maxLines="2"
        android:ellipsize="end"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/nome_card"
        app:layout_constraintEnd_toEndOf="@id/nome_card"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@id/nome_card"

        tools:text="descrição descrição descrição descrição descrição descrição descrição descrição descrição descrição descrição descrição descrição descrição descrição " />

    <TextView
        android:id="@+id/valor_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:inputType="numberDecimal"
        android:textSize="16sp"

        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:ellipsize="end"

        app:layout_constraintTop_toBottomOf="@id/descricao_card"
        app:layout_constraintEnd_toEndOf="@id/nome_card"
        app:layout_constraintStart_toStartOf="@id/nome_card"


        tools:text="R$ 5.000,00" />

    <TextView
        android:id="@+id/link_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"

        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"

        app:layout_constraintTop_toBottomOf="@id/valor_card"
        app:layout_constraintEnd_toEndOf="@id/nome_card"
        app:layout_constraintStart_toStartOf="@id/nome_card"
        app:layout_constraintBottom_toBottomOf="parent"


        tools:text="www.wellisonstore.com" />



</androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>